# ============================================================
# Intelligent ERP Approval Middleware â€” Environment Variables
# Copy this to .env and fill in your values
# ============================================================

# --- Application ---
APP_NAME=erp-approval-middleware
APP_ENV=development
DEBUG=true

# --- Database (MySQL) ---
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=changeme
DB_NAME=erp_middleware

# --- SAP Connection ---
SAP_BASE_URL=https://sapes5.sapdevcenter.com
SAP_API_KEY=your-sap-api-key-here
SAP_USERNAME=
SAP_PASSWORD=
SAP_TIMEOUT=30

# --- ERP Adapter Mode ---
# Options: mock | sap
# Use "mock" for development/testing, "sap" for production
ERP_MODE=mock

# --- Approval Grace Period ---
# Time window (in minutes) before auto-committing to ERP
GRACE_PERIOD_MINUTES=5

# --- Scheduler ---
SCHEDULER_COMMIT_INTERVAL_SECONDS=60

# --- Demo Mode ---
# Set to true to reset all POs on startup (useful for demos)
DEMO_MODE=false

# --- Auto-Commit ---
# Set to false to disable automatic commit of approved POs to ERP
AUTO_COMMIT_ENABLED=true

# --- API ---
API_HOST=0.0.0.0
API_PORT=8000
